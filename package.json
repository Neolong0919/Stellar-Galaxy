{
  "name": "stellar-galaxy",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && cd NeteaseCloudMusicApi && npm run pkgwin && cd .. && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.160.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.8",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.stellar.galaxy",
    "productName": "Stellar Galaxy",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "NeteaseCloudMusicApi/bin/app.exe",
        "to": "NeteaseCloudMusicApi/app.exe"
      },
      {
        "from": "NeteaseCloudMusicApi/public",
        "to": "NeteaseCloudMusicApi/public",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public/image",
        "to": "public/image",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "bin/node.exe",
        "to": "bin/node.exe"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    }
  }
}